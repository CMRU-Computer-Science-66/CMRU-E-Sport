{
	"name": "cmru-e-sport",
	"version": "1.0.2",
	"license": "apache-2.0",
	"scripts": {
		"clean": "tsm ./script/clean-temp.ts && pnpm --filter=* clean",
		"client": "pnpm -w --filter=./Client ",
		"dev": "pnpm --parallel --filter=* dev",
		"eslint:fix": "pnpm --parallel --filter=* lint:fix",
		"eslint:lint": "pnpm --parallel --filter=* lint",
		"format": "pnpm -w --filter=* format --list-different",
		"pkg:update": "pnpm up --latest --recursive --interactive",
		"prepare": "husky",
		"prettier": "prettier --write . --ignore-unknown",
		"prettier:pkg": "prettier-package-json --write **/package.json --use-tabs 3",
		"submodule:update": "git submodule update --rebase --remote"
	},
	"workspaces": [
		"./Client"
	],
	"dependencies": {
		"@types/node": "20.11.19",
		"@typescript-eslint/eslint-plugin": "7.0.2",
		"@typescript-eslint/parser": "7.0.2",
		"del": "7.1.0",
		"del-cli": "5.1.0",
		"dotenv-cli": "7.3.0",
		"eslint": "8.56.0",
		"eslint-config-prettier": "9.1.0",
		"eslint-plugin-prettier": "5.1.3",
		"husky": "9.0.11",
		"lint-staged": "15.2.2",
		"prettier": "3.2.5",
		"prettier-package-json": "2.8.0",
		"prettier-plugin-sort-json": "3.1.0",
		"prettier-plugin-tailwindcss": "0.5.11",
		"tsm": "2.3.0",
		"tsup": "8.0.2",
		"typescript": "5.3.3"
	},
	"husky": {
		"pre-commit": "pnpm lint-staged"
	},
	"lint-staged": {
		"*": [
			"prettier --write --ignore-unknown"
		],
		"**/package.json": [
			"prettier-package-json --write --use-tabs 3"
		]
	},
	"prettier": {
		"bracketSameLine": true,
		"bracketSpacing": true,
		"printWidth": 180,
		"semi": true,
		"singleQuote": false,
		"tabWidth": 3,
		"trailingComma": "all",
		"useTabs": true,
		"overrides": [
			{
				"excludeFiles": "package.json",
				"files": "*.json",
				"options": {
					"jsonRecursiveSort": true,
					"plugins": [
						"prettier-plugin-sort-json"
					]
				}
			}
		]
	}
}
